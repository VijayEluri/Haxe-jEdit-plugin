# general plugin properites
plugin.sidekick.haxe.HaXeSideKickPlugin.activate=defer
plugin.sidekick.haxe.HaXeSideKickPlugin.name=HaXe SideKick 
plugin.sidekick.haxe.HaXeSideKickPlugin.author=Dion Amago
plugin.sidekick.haxe.HaXeSideKickPlugin.version=0.1
plugin.sidekick.haxe.HaXeSideKickPlugin.docs=docs/index.html
plugin.sidekick.haxe.HaXeSideKickPlugin.description=HaXe parser and code-completion plugin for use with the SideKick plugin.

# dependencies
plugin.sidekick.haxe.HaXeSideKickPlugin.depend.0=jdk 1.5
plugin.sidekick.haxe.HaXeSideKickPlugin.depend.1=jedit 04.03.08.00
plugin.sidekick.haxe.HaXeSideKickPlugin.depend.2=plugin errorlist.ErrorListPlugin 1.3.1
plugin.sidekick.haxe.HaXeSideKickPlugin.depend.3=plugin sidekick.SideKickPlugin 0.7.2
plugin.sidekick.haxe.HaXeSideKickPlugin.depend.4=plugin ctags.sidekick.Plugin 1.2
plugin.sidekick.haxe.HaXeSideKickPlugin.depend.5=plugin projectviewer.ProjectPlugin 3.0.0

# external dependencies
#plugin.sidekick.haxe.HaXeSideKickPlugin.jars=guava-r03.jar

# Plugins menu items
plugin.sidekick.haxe.HaXeSideKickPlugin.menu.label=HaXe
plugin.sidekick.haxe.HaXeSideKickPlugin.menu=haxe-build-project \
             haxe-launch-project \
             haxe-sidekick-complete
haxe-build-project.label=Build current project
haxe-launch-project.label=Run current project
haxe-sidekick-complete=Code Complete
  
